<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane alignment="CENTER" hgap="10.0" minHeight="250.0" minWidth="250.0" prefHeight="550.0" prefWidth="900.0" vgap="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="agilepuppers.cleanwater.controller.LoginScreen">
    <children>
        <Text fx:id="title" textAlignment="RIGHT" GridPane.halignment="CENTER" GridPane.rowIndex="0">
            <!--Value gets loaded automatically in controller-->
            <font>
                <Font size="32" />
            </font>
            <GridPane.margin>
                <Insets bottom="20.0" />
            </GridPane.margin>
        </Text>
        <TextField prefWidth="200.0" promptText="Username" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
        <PasswordField prefWidth="200.0" promptText="Password" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
        <GridPane alignment="CENTER" hgap="10" prefWidth="200.0" vgap="10.0" GridPane.rowIndex="3">
            <children>
                <Button onAction="#handleLogin" prefHeight="25.0" prefWidth="95.0" GridPane.columnIndex="0" GridPane.halignment="LEFT">
                    Log In
                </Button>
                <Button onAction="#handleRegister" prefHeight="25.0" prefWidth="95.0" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
                    Register
                </Button>
            </children>
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
            </rowConstraints>
        </GridPane>
    </children>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
    <padding>
        <Insets bottom="20.0" />
    </padding>
</GridPane>
